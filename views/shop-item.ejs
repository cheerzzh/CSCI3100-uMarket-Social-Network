<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop Item Page</title>

    <!-- Bootstrap Core CSS -->
    <link href="public/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="public/stylesheets/include/shop-homepage.css" rel="stylesheet">

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="public/stylesheets/include/shop-item.css" rel="stylesheet">


</head>

<body>
    <!-- Page Content -->
    <div class="container">

        <div class="row">

            <div class="col-md-9">

                <div class="thumbnail">

                        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img class="slide-image" src="https://img.alicdn.com/tps/TB1pXLmMXXXXXXxXXXXXXXXXXXX-770-360.jpg" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="https://img.alicdn.com/tps/TB1U5YGMXXXXXXvXpXXXXXXXXXX-770-360.jpg" alt="">
                                </div>
                                <div class="item">
                                    <img class="slide-image" src="https://gw.alicdn.com/tps/TB1j6.4MXXXXXcIXXXXXXXXXXXX-770-360.jpg" alt="">
                                </div>
                            </div>
                            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </a>
                            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </a>
                        </div>

                    <div class="caption-full">
                        <h4 class="pull-right">$24.99</h4>
                        <h4 class="name"></h4>
                        <p class="description"></p>
                        <div class="text-right">
                            <input type="submit" class="btn btn-info" value="Chat to Buy" onclick="newLocation()">
                            <a href="#" class="btn btn-default">
                                    <span class="glyphicon glyphicon-heart" style="color:palevioletred"></span> Like </a>

                        </div>

                        </div>

                    </div>

                <div class="well">
                        <label>Comment Box</label>

                    <hr>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="commenterImage">
                                <img src="http://lorempixel.com/50/50/people/9" />
                            </div>
                            Anonymous
                            <span class="pull-right">10 days ago</span>
                            <p>This product was great in terms of quality. I would definitely buy another!</p>
                        </div>
                    </div>

                    <hr>

                    <script type="text/javascript">
                        function formSubmit()
                        {
                            document.getElementById("myForm").submit()
                        }
                    </script>

                    <li>
                        <div class="commenterImage">
                            <img src="http://lorempixel.com/50/50/people/9" />
                        </div>
                        <div class="commentText">
                            <p class="">Hello this is a test comment.</p> <span class="date sub-text">on March 5th, 2014</span>

                        </div>
                    </li>
                    <hr>
                    <li>
                        <div class="commenterImage">
                            <img src="http://lorempixel.com/50/50/people/8" />
                        </div>
                        <div class="commentText">
                            <p class="">Hello this is a test comment.</p> <span class="date sub-text">on March 5th, 2014</span>

                        </div>
                    </li>
                    <hr>
                    <li>
                        <div class="commenterImage">
                            <img src="http://lorempixel.com/50/50/people/7" />
                        </div>
                        <div class="commentText">
                            <p class="">Hello this is a test comment.</p> <span class="date sub-text">on March 5th, 2014</span>

                        </div>
                    </li>
                    <hr>
                    <div class="text-right">
                        <a class="btn btn-success">Leave a Review</a>
                    </div>

                    <form class="form-inline" role="form">
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="Your comments" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-default">Add</button>
                        </div>
                    </form>


                    <body>




                </div>

            </div>

        </div>


    </div>
<div>

    <a id="comments" href="#" class="dropdown-toggle navbar-icons" data-toggle="dropdown">
        <i class="fa fa-bell-o"></i>
    </a>
    <ul id="comments" class="dropdown-menu" role="menu">
        <script id="comments-template" type="text/x-handlebars-template">
            <li class="dropdown-title">
                <h5><b>Comments</b></h5>
            </li>
            {{#each comments}}
            <li>
                <a href="#">
                    <h5><b>{{commenterImage}}</b></h5>
                    {{{commentText}}}
                </a>
            </li>
            {{/each}}
            <li>
                <a href="#" class="text-center">
                    <span><b><i class="fa fa-bars"></i> More</b></span>
                </a>
            </li>
        </script>
    </ul>


</div>


    <script>
        var product = {
            name:"Apple",
            price:"$600",
            description:"This is my favorite apple, please have a look :) hope you like it.",
            userID : String,
            userEmail : String,
            itemName : "Apple",
            createDate : Date,
            updateDate : Date,
            imageLinks : "https://www.google.com.hk/logos/doodles/2016/120th-anniversary-of-first-modern-olympic-games-6314245085986816-5656774724026368-ror.jpg",

        };



        var cap = document.getElementsByClassName("caption-full")[0];
        cap.getElementsByClassName("name")[0].innerHTML = product.name;
        cap.getElementsByClassName("description")[0].innerHTML = product.description;
        cap.getElementsByClassName("pull-right")[0].innerHTML = product.price;
        document.getElementsByClassName("img-responsive")[0].src = product.imageLinks;
        function newLocation()
        {
            window.location="http://www.cuhk.edu.hk/english/index.html"
        }

</script>



    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

</body>

</html>
