        <div class="container" style=" padding-top: 100px; ">
            <div class="row">
                <div class="col-lg-3 col-md-3">
                    <div class="panel  panel-dark widget-profile" id="gender_panel">
                        <div class="panel-heading">
                            <div class="widget-profile-bg-icon" id="gender_cover"><i class="fa fa-female"></i></div>
                            <img id="avatar-cover" alt="" class="widget-profile-avatar">
                            <div class="widget-profile-header">
                                <span id="username-cover"></span><br>
                                <label class="location" id="university-cover"><i class="fa fa-map-marker"></i></label>
                            </div>
                            </div> <!-- / .panel-heading -->
                            <div class="widget-profile-counters">
                                <div class="col-xs-4"><span id="itemNumber"></span><br>Items</div>
                                <div class="col-xs-4"><span id="followerNumber"></span><br>Followers</div>
                                <div class="col-xs-4"><span id="followingNumber"></span><br>Followings</div>
                            </div>
                            <hr>
                            <div class="widget-profile-text text-center" id="statement-cover">
                                
                            </div>
                            <!--
                            <a href="#" class="btn btn-block btn-success">Follow</a>
                            <a href="#" class="btn btn-block btn-warning">Follow</a>
                            -->
                            </div> <!-- / .panel --><br>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"><b>Updates Your Items</b></h3>
                                </div>
                                <div class="panel-body">
                                    <ul id="trends" class="panel-list">
                                    <ul id="userItemList"></ul>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9">
                        <div class="panel panel-default">
                            <div id="new-micropost" class="panel-body">
                                <div id='results'></div>
                                <div id='userInfo'></div>
                                <h2>I Want to Sell</h2>
                                <form role="form" action="/postItem" method="post" enctype="multipart/form-data">
                                    <div class="form-group ">
                                        <label for="email">Item name * :</label>
                                        <input type="text" class="form-control" name="itemName" placeholder="Enter item name" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="comment">Description * :</label>
                                        <textarea class="form-control" rows="5" name="description" placeholder="Say something about your lovely items"></textarea>
                                    </div>
                                    
                                    <div class="form-group ">
                                        <label for="email">Price (HKD) * :</label>
                                        <input type="number" class="form-control" name="price" placeholder="" min="0" required>
                                    </div>
                                    
                                    <div class="form-group ">
                                        <label for="comment">Condition (%):</label>
                                        <input type="range" min="0" max="100" value="100" step="5" name="condition" onchange="showValue(this.value)" /><span id="range">100</span>
                                    </div>
                                    <div class="form-group ">
                                        <label for="email">Reference link:</label>
                                        <input type="url" class="form-control" name="refLink" placeholder="May be from amazon ?">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">You may upload pictures (<= 3)</label>
                                        <input id="input-21" type="file"  multiple class="file-loading" name = 'images'>
                                    </div>
                                    <button type="submit" class="btn btn-default" >Post ~</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!--show list of item if exists-->
                    
                </div>
            </div>
